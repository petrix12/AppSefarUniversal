# Configuración PHP para aumentar límites
<IfModule mod_php.c>
    php_value max_execution_time 300
    php_value memory_limit 256M
    php_value max_input_time 300
    php_value post_max_size 50M
    php_value upload_max_filesize 50M
</IfModule>

# Headers para Varnish/CDN de OVH
<IfModule mod_headers.c>
    # Desactivar buffering de Varnish para contenido dinámico
    Header set X-Accel-Buffering "no"

    # Mantener conexión activa
    Header set Connection "keep-alive"

    # Cache control por defecto (sin cache para contenido dinámico)
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"

    # Permitir cache SOLO para archivos estáticos
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp|mp4|mp3|pdf)$">
        Header set Cache-Control "public, max-age=2592000, immutable"
        Header unset Pragma
        Header unset Expires
    </FilesMatch>

    # Headers de seguridad
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Configuración de compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Configuración Laravel
<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Bloquear acceso a archivos sensibles
<FilesMatch "^\.env|^\.git|composer\.(json|lock)|package(-lock)?\.json|webpack\.mix\.js|artisan">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes
